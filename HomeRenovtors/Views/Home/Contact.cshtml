
@{
    ViewBag.Title = "Contact";
}

<p>Contact us form for any Query that can take the query from the customers  </p>
<br />
<img src="~/images/contact.png" />
<br />
<div class="container">
    <div class="row">


        <div class="col-md-12">
            <h1>Feel Free to Ask any Question </h1>
            <form method="post" action="Passquery">

                <div class="form-group">
                    <label>Enter Name </label>
                    <input type="text" name="txtName" class="form-control" placeholder="Enter Name" />
                </div>

                <div class="form-group">
                    <label>Enter Contact </label>
                    <input type="number" name="txtContact" class="form-control" placeholder="Enter Contact" />
                </div>
                <div class="form-group">
                    <label>Enter Message </label>
                    <input type="text" name="txtMsg" class="form-control" placeholder="Enter Message" />
                </div>

                <input type="submit" value="Send " class="btn btn-primary" />
            </form>
        </div>

    </div>

</div>